<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<bean
		class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter">
	</bean>
	<!-- the application context definition for the springapp DispatcherServlet -->
	<bean name="/list_cars.html" class="com.springapp.controller.CarListController" />

	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
		<property name="order" value="1" />
	</bean>

	<bean name="/new_car.html" class="com.springapp.controller.CarNewController">
    	<property name="commandClass" value="com.springapp.model.Car"/>
    	<property name="formView" value="carNew"/>
    	<property name="successView" value="list_cars.html"/>
	</bean>

</beans>
